{
  "name": "vue3-roc-date-picker",
  "version": "0.1.0",
  "description": "A date picker UI component displays year in Republic Era or Common Era",
  "author": {
    "name" : "melodiehsu",
    "url" : "https://github.com/melodiehsu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/melodiehsu/vue-roc-date-picker.git"
  },
  "bugs": { 
    "url" : "https://github.com/melodiehsu/vue-roc-date-picker/issues"
  },
  "license": "MIT",
  "type": "module",
  "files": ["dist"],
  "main": "./dist/vue-roc-date-picker.umd.js",
  "module": "./dist/vue-roc-date-picker.es.js",
  "typings": "./src/interfaces/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-roc-date-picker.es.js",
      "require": "./dist/vue-roc-date-picker.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite --port 5566 --open",
    "build": "run-p type-check build-only",
    "build:lib": "run-p type-check  && vite build --config vite.config.lib.ts",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@vue/eslint-config-airbnb": "^7.0.0",
    "@vue/eslint-config-airbnb-with-typescript": "^7.0.0",
    "dayjs": "^1.11.9",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.17.5",
    "@vitejs/plugin-vue": "^4.3.1",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/ui": "^0.34.4",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.46.0",
    "eslint-plugin-vue": "^9.16.1",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.66.1",
    "typescript": "~5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.2",
    "vue-tsc": "^1.8.8"
  }
}
